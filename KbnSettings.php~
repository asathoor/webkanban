<?php
/*
* File: KbnSettings.php
* Purpose: Select a kanban
*/

// which board to display?

	if(isset($_SESSION['KbnActive'])){
		echo "Showing this kanban board: ";
		// echo $_SESSION["KbnActive"];
		KbnGetHeaders($_SESSION['KbnActive']); // display kanban
		// KbnGetHeaders("MyKanban"); // display kanban
	}
	else {
		echo "(Error: Did not find session). Please select a kanban board below.";
		KbnGetHeaders("MyKanban"); // display kanban
	}

// set the SESSION in order to save the active kanban in a local browser
if($_POST['KanbanChosen'] == 1){
		echo $_POST['Name'];
		$_SESSION['KbnActive'] = "MyKanban";
}


?>

<form action='#' method='post' enctype='multipart/form-data'>
	<select name='SelectKanban' form='SelectKanban'>
	<?
	// echo options from database
	$selected = $wpdb->get_results("SELECT * FROM `KbnProjects`");
	foreach($selected as $row){
		echo "<option value='{$row->Value}' label='{$row->Name}'> $row->Name </option>";
		$_POST['Id'] = $row->Value;
		$_POST['Name'] = $row->Name;
		}
	?>
	</select>
	<button name='KanbanChosen' value='1' type='submit'>Change kanban board</button>
</form>


