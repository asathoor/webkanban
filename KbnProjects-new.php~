<? 
//global $wpdb; // henter klassen
include('config.php');

echo "<div class='wrap'>";
echo "<h2>New Kanban Project</h2>";


if (isset($_POST['NewKbnProjectSubmit'])) { 
	foreach($_POST AS $key => $value) { $_POST[$key] = mysql_real_escape_string($value); } 

$sql = "INSERT INTO `KbnProjects` (`Name`) VALUES( '{$_POST['Name']}' ); "; 

print_r($_POST);

// mysql_query($sql) or die(mysql_error()); 
$wpdb->query($wpdb->prepare($sql)); // Query

echo "Added row.<br />"; 
} 
?>

<form action='' method='POST'> 
	<fieldset>
		<legend>Enter the name of a new Kanban project </legend>
			<p><b>Name:</b><br /><input type='text' name='Name'/> 
			<input type='hidden' name='KbnProjects_Id'/> 
			<p><input type='Submit' value='Add Row' />
			<input type='hidden' value='1' name='NewKbnProjectSubmit' /> 
	</fieldset>
</form> 
